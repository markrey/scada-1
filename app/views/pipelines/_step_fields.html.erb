<li class="step">
  <h3><%= f.object.name %> <small>(<%= f.object.type %>)</small></h3>
  <%= f.text_field :name %>
  <%= f.select :type, Step.subclasses.map { |x| [t(x), x] } %>

  <h4>Options</h4>
  <div class="options">
    <% f.object.class.stored_attributes[:options].each do |o| %>
      <%= f.text_field o, layout: :horizontal, data: { option: o } %>
    <% end %>
  </div>
</li>