<li class="step col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><span class="name"><%= step.name %></span> <small>(<span class="type"><%= step.class %></span>)</small></h3>
    </div>

    <div class="panel-body">
      <% options = step.class.stored_attributes[:options].select { |o| step.public_send(o).present? } %>
      <% if options.any? %>
      <h4>Options</h4>
      <dl class="options">
        <% options.each do |o| %>
          <dt><%= o %></dt>
          <dd><%= step.public_send(o) %></dd>
        <% end %>
      </dl>
      <% end %>
    </div>
  </div>
</li>