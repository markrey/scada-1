<p id="notice"><%= notice %></p>

<h1>Listing Steps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Options</th>
      <th>Pipeline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name %></td>
        <td><%= step.type %></td>
        <td><%= step.options %></td>
        <td><%= step.pipeline %></td>
        <td><%= link_to 'Show', step if can? :read, step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) if can? :edit, step  %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, step  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_step_path if can? :create, Step%>
